<style>
    .show { 
        left: 20%;
        transition: left 1s; 
    }


</style>

<script>

const menu:any= document.getElementById("menu")
const navMenu:any = document.getElementById("navMenu")
const menuIcon = (document.getElementById("menuIcon")as HTMLImageElement )
let estado = false
const menuOpen = "./src/img/menu.svg"
const menuClose = "./src/img/close.svg"
menu.addEventListener('click', (event:any) => {

    event.stopPropagation(); 
    if (estado === false){
        navMenu.classList.toggle("show")
        estado = true
        menuIcon.src = menuClose

    } else if (estado === true){
        navMenu.classList.toggle("show")
        estado = false
        menuIcon.src = menuOpen
        
    }
   
})

document.addEventListener('click', function() {
    
    if(estado === true) {
        navMenu.classList.toggle("show")
        estado = false
        menuIcon.src = menuOpen
    }
  });

  

</script>